# ============================================================================
# CONTRACTNEST API - Environment Variables
# ============================================================================

# ----------------------------------------------------------------------------
# SERVER CONFIGURATION
# ----------------------------------------------------------------------------
PORT=5000
NODE_ENV=development
API_BASE_URL=http://localhost:5000
FRONTEND_URL=http://localhost:5173

# ----------------------------------------------------------------------------
# PRODUCT: CONTRACTNEST (Default)
# ----------------------------------------------------------------------------
# These are used when X-Product header is missing or set to "contractnest"
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_anon_key_here

# ----------------------------------------------------------------------------
# PRODUCT: FAMILYKNOWS
# ----------------------------------------------------------------------------
# These are used when X-Product header is "familyknows"
# Prefix: FK_ (configured in m_products table)
FK_SUPABASE_URL=your_familyknows_supabase_url_here
FK_SUPABASE_KEY=your_familyknows_supabase_anon_key_here

# ----------------------------------------------------------------------------
# AUTHENTICATION
# ----------------------------------------------------------------------------
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=215m
GOOGLE_AUTH_ENABLED=true
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# ----------------------------------------------------------------------------
# FIREBASE (ContractNest Only)
# ----------------------------------------------------------------------------
# Note: FamilyKnows uses Google Drive instead of Firebase
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id_here
VITE_FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
VITE_FIREBASE_APP_ID=your_app_id_here

# ----------------------------------------------------------------------------
# SECURITY
# ----------------------------------------------------------------------------
INTERNAL_SIGNING_SECRET=your_internal_signing_secret_here

# ----------------------------------------------------------------------------
# MONITORING & ERROR TRACKING
# ----------------------------------------------------------------------------
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# ----------------------------------------------------------------------------
# MAINTENANCE MODE
# ----------------------------------------------------------------------------
MAINTENANCE_MODE=false
MAINTENANCE_END_TIME=2024-01-01T00:00:00Z
MAINTENANCE_MESSAGE=We're upgrading our systems to serve you better.

# ----------------------------------------------------------------------------
# CORS - Allowed Origins (comma-separated)
# ----------------------------------------------------------------------------
# ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://contractnest.com,https://familyknows.com
